		"eslint-config-airbnb-base": "14.1.0",
		"eslint-config-prettier": "^6.10.1",
		"eslint-plugin-import": "^2.20.2",
		"prettier": "^2.0.4"
	},
	"eslintConfig": {
		"root": true,
		"extends": "@samuelmeuli/eslint-config",
		"env": {
			"node": true
		}
	},
	"eslintIgnore": [
		"node_modules/",
		"test/"
